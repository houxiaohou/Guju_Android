<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <android.guju.service.GabrielleViewFlipper
        android:id="@+id/flipper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:contentDescription="@string/hello" >
        
        <ProgressBar
            android:id="@+id/proBar"
            android:layout_width="120dip"
            android:layout_height="120dip"
            android:layout_gravity="center" />
        
    </android.guju.service.GabrielleViewFlipper>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dip"
        android:layout_alignTop="@id/flipper"
        android:orientation="horizontal" >

        <Spinner
            android:id="@+id/style"
            android:layout_width="121dip"
            android:layout_height="fill_parent"
            android:background="@drawable/spinner"
            android:text="@string/style" />

        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="#ffffff" />

        <Spinner
            android:id="@+id/space"
            android:layout_width="121dip"
            android:layout_height="fill_parent"
            android:background="@drawable/spinner"
            android:text="@string/space" />

        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="#ffffff" />

        <Button
            android:id="@+id/confirmButt"
            android:layout_width="75dip"
            android:layout_height="fill_parent"
            android:background="#9e7b5d"
            android:text="@string/OK"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/flipper"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="159dip"
            android:layout_height="40dip"
            android:background="#9e7b5d"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/addicon"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_marginLeft="10dip"
                android:contentDescription="@string/addidea"
                android:src="@drawable/add" />

            <Button
                android:id="@+id/addidea"
                android:layout_width="80dip"
                android:layout_height="40dp"
                android:background="#9e7b5d"
                android:gravity="center"
                android:text="@string/addidea"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <View
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="#ffffff" />

        <LinearLayout
            android:layout_width="159dip"
            android:layout_height="40dip"
            android:background="#9e7b5d"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/ideaicon"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_marginLeft="10dip"
                android:contentDescription="@string/myidea"
                android:src="@drawable/ideabook" />

            <Button
                android:id="@+id/myidea"
                android:layout_width="80dip"
                android:layout_height="40dp"
                android:background="#9e7b5d"
                android:gravity="center"
                android:text="@string/myidea"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
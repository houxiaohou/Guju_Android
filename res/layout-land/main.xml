<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <android.guju.service.GabrielleViewFlipper
        android:id="@+id/flipper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:contentDescription="@string/hello" >

        <ProgressBar
            android:id="@+id/proBar"
            android:layout_width="120dip"
            android:layout_height="120dip"
            android:layout_gravity="center" />
    </android.guju.service.GabrielleViewFlipper>

    <LinearLayout
        android:layout_width="40dip"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/flipper"
        android:orientation="vertical" >

        <Spinner
            android:id="@+id/style"
            android:layout_width="40dip"
            android:layout_height="121dip"
            android:background="@drawable/spinner2"
            android:text="@string/style" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#ffffff" />

        <Spinner
            android:id="@+id/space"
            android:layout_width="40dip"
            android:layout_height="121dip"
            android:background="@drawable/spinner2"
            android:text="@string/space" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#ffffff" />

        <Button
            android:id="@+id/confirmButt"
            android:layout_width="fill_parent"
            android:layout_height="75dip"
            android:background="@drawable/button"
            android:text="确\n定"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/flipper"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="40dip"
            android:layout_height="159dip"
            android:background="#9e7b5d"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/addicon"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:contentDescription="@string/addidea"
                android:src="@drawable/add1" />

            <Button
                android:id="@+id/addidea"
                android:layout_width="40dip"
                android:layout_height="80dp"
                android:background="#9e7b5d"
                android:gravity="center"
                android:text="加\n入\n灵\n感\n集"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#ffffff" />

        <LinearLayout
            android:layout_width="40dip"
            android:layout_height="159dip"
            android:background="#9e7b5d"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/ideaicon"
                android:layout_width="40dip"
                android:layout_height="40dip"
                android:layout_marginTop="5dip"
                android:contentDescription="@string/myidea"
                android:src="@drawable/ideabook1" />

            <Button
                android:id="@+id/myidea"
                android:layout_width="40dip"
                android:layout_height="80dp"
                android:background="#9e7b5d"
                android:gravity="center"
                android:text="我\n的\n灵\n感\n集"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
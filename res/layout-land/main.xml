<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <android.guju.service.GabrielleViewFlipper
        android:id="@+id/flipper"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:contentDescription="@string/hello" >

        <ProgressBar
            android:id="@+id/proBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />
    </android.guju.service.GabrielleViewFlipper>

    <LinearLayout
        android:id="@+id/spinner"
        android:layout_width="40dip"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/flipper"
        android:orientation="vertical" >

        <Spinner
            android:id="@+id/style"
            android:layout_width="40dip"
            android:layout_height="159dip"
            android:background="@drawable/spinner1"
            android:text="@string/style" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dip"
            android:background="#ffffff" />

        <Spinner
            android:id="@+id/space"
            android:layout_width="40dip"
            android:layout_height="159dip"
            android:background="@drawable/spinner1"
            android:text="@string/space" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/flipper"
        android:orientation="vertical" >

        <Button
            android:id="@+id/addidea"
            android:layout_width="40dip"
            android:layout_height="159dip"
            android:background="@drawable/button"
            android:contentDescription="@string/addidea"
            android:text="加\n入\n灵\n感\n集"
            android:textColor="#ffffff" />

        <View
            android:layout_height="1dip"
            android:layout_width="fill_parent"
            android:background="#ffffff" />

        <Button
            android:id="@+id/myidea"
            android:layout_width="40dip"
            android:layout_height="159dip"
            android:background="@drawable/button"
            android:contentDescription="@string/myidea"
            android:text="我\n的\n灵\n感\n集"
            android:textColor="#ffffff" />
    </LinearLayout>

</RelativeLayout>